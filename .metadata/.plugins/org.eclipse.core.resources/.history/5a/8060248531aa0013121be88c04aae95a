import java.io.*;
import java.net.*;

public class IOSocket implements IOInterface
{
	private BufferedReader myInput;
	private PrintStream myOutput;
	private Socket skt;
	
	public void setup()
	{
		String host = "206.87.3.137";
		int port = 9999;
		
		try
		{
			skt = new Socket(host, port);
		}
		catch(IOException e)
		{
			e.printStackTrace();
		}
		
		try 
		{
			myInput = new BufferedReader(new InputStreamReader(skt.getInputStream()));
		} 
		catch (IOException e1) 
		{
			e1.printStackTrace();
		}
		
		try 
		{
			myOutput = new PrintStream(skt.getOutputStream());
		} 
		catch (IOException e1)
		{
			e1.printStackTrace();
		}
		
		try
		{
			ServerSocket myServerSocket = new ServerSocket(9999);
			print("Waiting for connection..." 
					+ InetAddress.getLocalHost().getCanonicalHostName()
					+ "port =" + myServerSocket.getLocalPort());

		fromServer();
		
		skt.close();
		myServerSocket.close();
			
	}
	catch(IOException e)
	{
		e.printStackTrace();
	}
}

	@Override
	public void print(String response) 
	{
		System.out.println(response);
	}

	@Override
	public String read() 
	{
		try 
		{
			return myInput.readLine();
		} 
		catch (IOException e) 
		{
			e.printStackTrace();
		}
		return null;
	}
	
	public String fromServer()
	{
		String buf;
		do
		{
			buf = read();
		}
		while(buf==null);
		
		return buf;
	}
}

